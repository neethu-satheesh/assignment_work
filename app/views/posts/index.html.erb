<div class = "kaminari">
  <%= paginate @posts %>
</div>

<table class="table table-hover table-bordered table-striped">
  <thead  class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Url</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td scope="row"><%=  post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.url %></td>
        <td><%= button_to 'Show', post_path(post), class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :get %></td>
        <td><%= button_to 'Edit', edit_post_path(post), class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= button_to 'Back', root_path, class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :get %>
