<div class="container">
  <div class="py-5 text-center">
    <h2>Show Post</h2>
  </div>

  <div class="row">
    <div class="col-md-6 order-md-1">
        <div class="row">
          <div class="col-md-12 mb-3">
            <label class="badge badge-secondary">Title</label>
            <%= @post.title %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 mb-3">
            <label class="badge badge-secondary">Url</label>
            <%= @post.url %>
          </div>
        </div>


        <%= button_to 'Back', posts_path, class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :get %>

        <%= button_to 'Edit', edit_post_path(@post), class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :get %>

        <%= button_to 'Delete', post_path(@post), class: "btn btm-sm-pri btn-primary mrg-lft-2", method: :delete, data: { confirm: "Are you sure?" } %>

      </form>
    </div>
  </div>
</div>
